<script>
// Sidebar Section Toggle
function toggleSection(btn) {
  const section = btn.closest('.sidebar-section');
  const content = section.querySelector('.section-content');
  const arrow = btn.querySelector('svg');
  
  if (content.style.display === 'none') {
    content.style.display = 'block';
    arrow.style.transform = 'rotate(0deg)';
  } else {
    content.style.display = 'none';
    arrow.style.transform = 'rotate(-90deg)';
  }
}

// Command Palette
const commands = [
  // Navigation
  { group: 'Navigation', title: 'Dashboard', href: '/dashboard', icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6' },
  { group: 'Navigation', title: 'AI Providers', href: '/ai', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
  { group: 'Navigation', title: 'Vector Search', href: '/vector-search', icon: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z' },
  { group: 'Navigation', title: 'Query Explorer', href: '/query', icon: 'M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
  { group: 'Navigation', title: 'Connections', href: '/connections', icon: 'M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1' },
  { group: 'Navigation', title: 'Vector Database', href: '/vector-db', icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3L6.05.86.517 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z' },
  { group: 'Navigation', title: 'Workflows', href: '/workflows', icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z' },
  { group: 'Navigation', title: 'Settings', href: '/settings', icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z' },
  // Actions
  { group: 'Actions', title: 'New Connection', action: 'newConnection', icon: 'M12 6v6m0 0v6m0-6h6m-6 0H6', shortcut: '⌘N' },
  { group: 'Actions', title: 'New Workflow', action: 'newWorkflow', icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15', shortcut: '⌘W' },
  { group: 'Actions', title: 'Quick Query', action: 'quickQuery', icon: 'M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z', shortcut: '⌘Q' },
  { group: 'Actions', title: 'Search Vectors', action: 'searchVectors', icon: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z', shortcut: '⌘F' },
  { group: 'Actions', title: 'Test All Providers', action: 'testProviders', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', shortcut: '⌘T' },
  // System
  { group: 'System', title: 'Toggle Theme', action: 'toggleTheme', icon: 'M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z', shortcut: '⌘D' },
  { group: 'System', title: 'Reload Page', action: 'reload', icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15', shortcut: '⌘R' }
];

let selectedIndex = 0;

function toggleCommandPalette() {
  const palette = document.getElementById('command-palette');
  const input = document.getElementById('command-input');
  
  if (palette.classList.contains('hidden')) {
    palette.classList.remove('hidden');
    palette.classList.add('flex');
    input.value = '';
    renderResults('');
    input.focus();
    selectedIndex = 0;
  } else {
    closeCommandPalette();
  }
}

function closeCommandPalette(event) {
  if (!event || event.target === document.getElementById('command-palette')) {
    const palette = document.getElementById('command-palette');
    palette.classList.add('hidden');
    palette.classList.remove('flex');
  }
}

function renderResults(filter) {
  const results = document.getElementById('command-results');
  const filtered = filter 
    ? commands.filter(c => c.title.toLowerCase().includes(filter.toLowerCase()) || c.group.toLowerCase().includes(filter.toLowerCase()))
    : commands;
  
  let html = '';
  let currentGroup = '';
  
  filtered.forEach((cmd, index) => {
    if (cmd.group !== currentGroup) {
      html += `<div class="px-3 py-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">${cmd.group}</div>`;
      currentGroup = cmd.group;
    }
    const isSelected = index === selectedIndex;
    const shortcut = cmd.shortcut ? `<kbd class="px-2 py-0.5 bg-slate-700 rounded text-xs text-slate-400">${cmd.shortcut}</kbd>` : '';
    const href = cmd.href || '#';
    const actionAttr = cmd.action ? `data-action="${cmd.action}"` : '';
    html += `
      <a href="${href}" 
         class="command-item flex items-center gap-3 px-4 py-2.5 rounded-lg cursor-pointer transition-colors ${isSelected ? 'bg-slate-700 text-white' : 'text-slate-300 hover:bg-slate-800'}"
         ${actionAttr}
         onclick="${cmd.action ? `handleAction('${cmd.action}')` : `executeCommand({href:'${cmd.href}'})`}; return false;">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${cmd.icon}"/>
        </svg>
        <span class="flex-1">${cmd.title}</span>
        ${shortcut}
      </a>
    `;
  });
  
  results.innerHTML = html || '<div class="px-4 py-8 text-center text-slate-400">No results found</div>';
}

function executeCommand(cmd) {
  closeCommandPalette();
  if (cmd.href) {
    htmx.ajax('GET', cmd.href, { target: '#main-content', pushUrl: true });
  } else if (cmd.action) {
    handleAction(cmd.action);
  }
}

function handleAction(action) {
  switch(action) {
    case 'newConnection':
      htmx.ajax('GET', '/connections', { target: '#main-content' }).then(() => {
        setTimeout(() => {
          const addBtn = document.querySelector('[hx-get="/connections/new"]') || document.querySelector('.btn-primary');
          if (addBtn) addBtn.click();
        }, 100);
      });
      break;
    case 'newWorkflow':
      htmx.ajax('GET', '/workflows/new', { target: '#main-content', pushUrl: true });
      break;
    case 'quickQuery':
      htmx.ajax('GET', '/query', { target: '#main-content', pushUrl: true });
      break;
    case 'searchVectors':
      htmx.ajax('GET', '/vector-search', { target: '#main-content', pushUrl: true });
      break;
    case 'testProviders':
      htmx.ajax('GET', '/ai', { target: '#main-content' }).then(() => {
        setTimeout(() => {
          const testBtn = document.querySelector('[onclick*="testProvider"]') || document.querySelector('.test-provider-btn');
          if (testBtn) testBtn.click();
        }, 100);
      });
      break;
    case 'toggleTheme':
      document.body.classList.toggle('dark');
      localStorage.setItem('theme', document.body.classList.contains('dark') ? 'dark' : 'light');
      break;
    case 'reload':
      window.location.reload();
      break;
  }
}

function closeCommandPalette(event) {
  if (!event || event.target === document.getElementById('command-palette')) {
    const palette = document.getElementById('command-palette');
    palette.classList.add('hidden');
    palette.classList.remove('flex');
  }
}

// Keyboard Navigation
document.addEventListener('DOMContentLoaded', function() {
  const input = document.getElementById('command-input');
  
  input.addEventListener('keydown', function(e) {
    const items = document.querySelectorAll('.command-item');
    const count = items.length;
    
    switch(e.key) {
      case 'ArrowDown':
        e.preventDefault();
        selectedIndex = (selectedIndex + 1) % count;
        renderResults(this.value);
        scrollToSelected();
        break;
      case 'ArrowUp':
        e.preventDefault();
        selectedIndex = (selectedIndex - 1 + count) % count;
        renderResults(this.value);
        scrollToSelected();
        break;
      case 'Enter':
        e.preventDefault();
        if (count > 0 && items[selectedIndex]) {
          items[selectedIndex].click();
        }
        break;
      case 'Escape':
        closeCommandPalette();
        break;
    }
  });
  
  input.addEventListener('input', function() {
    selectedIndex = 0;
    renderResults(this.value);
  });
  
  function scrollToSelected() {
    const selected = document.querySelector('.command-item.bg-slate-700');
    if (selected) {
      selected.scrollIntoView({ block: 'nearest' });
    }
  }
});

// Global Keyboard Shortcuts
document.addEventListener('keydown', function(e) {
  // Command palette toggle
  if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
    e.preventDefault();
    toggleCommandPalette();
  }
  // Quick action shortcuts
  if ((e.metaKey || e.ctrlKey) && !e.shiftKey && !e.altKey) {
    switch(e.key.toLowerCase()) {
      case 'n':
        e.preventDefault();
        handleAction('newConnection');
        break;
      case 'w':
        e.preventDefault();
        if (e.metaKey || e.ctrlKey) {
          e.preventDefault();
          handleAction('newWorkflow');
        }
        break;
      case 'q':
        e.preventDefault();
        handleAction('quickQuery');
        break;
      case 'f':
        e.preventDefault();
        handleAction('searchVectors');
        break;
      case 't':
        e.preventDefault();
        handleAction('testProviders');
        break;
      case 'd':
        e.preventDefault();
        handleAction('toggleTheme');
        break;
      case 'r':
        e.preventDefault();
        handleAction('reload');
        break;
    }
  }
});

// Highlight active nav link
document.addEventListener('DOMContentLoaded', function() {
  function updateActiveNav() {
    const path = window.location.pathname;
    document.querySelectorAll('.nav-link').forEach(link => {
      link.classList.remove('bg-slate-800', 'text-white');
      link.classList.add('text-slate-300');
      const href = link.getAttribute('href');
      if (path === href || (path.startsWith(href) && href !== '/')) {
        link.classList.add('bg-slate-800', 'text-white');
        link.classList.remove('text-slate-300');
        
        // Expand parent section
        const section = link.closest('.sidebar-section');
        if (section) {
          const content = section.querySelector('.section-content');
          const header = section.querySelector('.section-header');
          if (content && content.style.display === 'none') {
            content.style.display = 'block';
            if (header) {
              const arrow = header.querySelector('svg');
              if (arrow) arrow.style.transform = 'rotate(0deg)';
            }
          }
        }
      }
    });
  }
  updateActiveNav();
  document.body.addEventListener('htmx:afterSettle', updateActiveNav);
});
</script>
