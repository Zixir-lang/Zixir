        <kbd class="px-1.5 py-0.5 bg-slate-800 rounded text-[10px] text-slate-500">⌘N</kbd>
        <kbd class="px-1.5 py-0.5 bg-slate-800 rounded text-[10px] text-slate-500">⌘W</kbd>
        <kbd class="px-1.5 py-0.5 bg-slate-800 rounded text-[10px] text-slate-500">⌘Q</kbd>
        <kbd class="px-1.5 py-0.5 bg-slate-800 rounded text-[10px] text-slate-500">⌘T</kbd>
