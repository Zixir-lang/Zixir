  // Filter templates by category
  function filterTemplates(category) {
    const cards = document.querySelectorAll('.template-card');
    const filters = document.querySelectorAll('.template-filter');
    
    // Update filter buttons
    filters.forEach(btn => {
      if (btn.dataset.filter === category) {
        btn.classList.remove('bg-slate-800', 'text-slate-300');
        btn.classList.add('bg-zixir-600', 'text-white');
      } else {
        btn.classList.remove('bg-zixir-600', 'text-white');
        btn.classList.add('bg-slate-800', 'text-slate-300');
      }
    });
    
    // Show/hide cards
    cards.forEach(card => {
      if (category === 'all' || card.dataset.category.includes(category)) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Select workflow template
  function selectWorkflowTemplate(template) {
    selectedTemplate = template;
    templateConfig = templateConfigs[template] || templateConfigs['custom'];
    
    // Pre-fill name
    document.getElementById('workflow-name').value = templateConfig.name;
    
    // Build template-specific configuration fields
    buildTemplateConfigFields();
    
    // Update step preview
    updateStepPreview();
    
    // Update cost estimate
    updateCostEstimate();
    
    // Move to next step
    goToWorkflowStep(2);
  }

  // Build template-specific configuration fields
