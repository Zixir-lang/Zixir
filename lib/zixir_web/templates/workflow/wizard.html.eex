        'save': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-4 4m0 0l-4-4m4 4V4"/>',
        'user-group': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>',
        'exclamation': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>',
        'sparkles': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>',
        'search': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>',
        'transform': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>'
      };
      
      const iconSvg = iconMap[step.icon] || iconMap['cog'];
      const isLast = index === templateConfig.steps.length - 1;
      
      html += '<div class="flex items-start gap-3">';
      html += '<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-' + (step.type === 'ai' ? 'purple' : 'blue') + '-500/20 flex items-center justify-center">';
      html += '<svg class="w-5 h-5 text-' + (step.type === 'ai' ? 'purple' : 'blue') + '-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">';
      html += iconSvg;
      html += '</svg>';
      html += '</div>';
      html += '<div class="flex-1">';
      html += '<p class="text-white font-medium text-sm">' + step.name + '</p>';
      html += '<p class="text-slate-500 text-xs capitalize">' + step.type + '</p>';
      html += '</div>';
      html += '</div>';
      
      if (!isLast) {
        html += '<div class="ml-5 pl-0.5 h-6 border-l-2 border-slate-700"></div>';
      }
    });
    
    container.innerHTML = html;
  }

  // Update cost estimate
  function updateCostEstimate() {
    const costPerRun = templateConfig.costPerRun || 0;
    const scheduleSelect = document.getElementById('workflow-schedule');
    const runsPerDay = {
      'manual': 0,
      'hourly': 24,
      'daily': 1,
      'weekly': 0.14,
      'custom': 1
    };
    
    const schedule = scheduleSelect ? scheduleSelect.value : 'manual';
    const dailyRuns = runsPerDay[schedule] || 0;
    const dailyCost = costPerRun * dailyRuns;
    const monthlyCost = dailyCost * 30;
    
    document.getElementById('cost-per-run').textContent = '$' + costPerRun.toFixed(2);
    document.getElementById('cost-daily').textContent = '$' + dailyCost.toFixed(2);
    document.getElementById('cost-monthly').textContent = '$' + monthlyCost.toFixed(2);
  }

  // Navigation
  function goToWorkflowStep(step) {
    document.querySelectorAll('.wizard-step').forEach(el => el.classList.add('hidden'));
    document.getElementById(`workflow-step-${step}`).classList.remove('hidden');
    updateWorkflowProgress(step);
    
    if (step === 3) {
      updateReviewPage();
      updateWorkflowDiagram();
    }
  }

  function updateWorkflowProgress(currentStep) {
    const steps = document.querySelectorAll('.progress-step');
    steps.forEach((step, index) => {
      const stepNum = index + 1;
      const circle = step.querySelector('.step-circle');
      const label = step.querySelector('.step-label');
      
      if (stepNum < currentStep) {
        circle.classList.remove('bg-slate-700', 'text-slate-400', 'bg-zixir-600');
        circle.classList.add('bg-emerald-600', 'text-white');
        label.classList.remove('text-slate-400');
        label.classList.add('text-white');
      } else if (stepNum === currentStep) {
        circle.classList.remove('bg-slate-700', 'text-slate-400', 'bg-emerald-600');
        circle.classList.add('bg-zixir-600', 'text-white');
        label.classList.remove('text-slate-400');
        label.classList.add('text-white');
      } else {
        circle.classList.remove('bg-zixir-600', 'bg-emerald-600', 'text-white');
        circle.classList.add('bg-slate-700', 'text-slate-400');
        label.classList.remove('text-white');
        label.classList.add('text-slate-400');
      }
    });
  }

  // Update review page
  function updateReviewPage() {
    const name = document.getElementById('workflow-name').value;
    const schedule = document.getElementById('workflow-schedule').value;
    const batchSize = document.getElementById('batch-size').value;
    const notify = document.getElementById('workflow-notify').checked;
    
    document.getElementById('review-name').textContent = name || 'Unnamed Workflow';
    document.getElementById('review-template').textContent = templateConfig.name;
    document.getElementById('review-schedule').textContent = schedule.charAt(0).toUpperCase() + schedule.slice(1);
    document.getElementById('review-batch').textContent = batchSize;
    document.getElementById('review-notify').textContent = notify ? 'Enabled' : 'Disabled';
    
    // Update deployment card
    document.getElementById('deploy-steps').textContent = templateConfig.steps.length;
    document.getElementById('deploy-cost').textContent = '$' + (templateConfig.costPerRun || 0).toFixed(2);
    document.getElementById('deploy-runtime').textContent = '~' + (templateConfig.steps.length * 2) + 's';
    
    // Add template-specific fields to review
    const specificFields = document.getElementById('review-specific-fields');
    let specificHtml = '';
    
    if (templateConfig.fields) {
      templateConfig.fields.forEach(field => {
        const el = document.getElementById('config-' + field.id);
        let value = '';
        
        if (el) {
          if (field.type === 'checkbox') {
            value = el.checked ? 'Yes' : 'No';
          } else if (field.type === 'multiselect') {
            const checked = document.querySelectorAll('input[name="config-' + field.id + ']:checked');
            value = Array.from(checked).map(cb => cb.value).join(', ') || 'None selected';
          } else {
            value = el.value || 'Not set';
          }
        }
        
        specificHtml += '<div class="flex justify-between items-center py-3 border-b border-slate-700">' +
                       '<span class="text-slate-400">' + field.label + '</span>' +
                       '<span class="text-white font-medium">' + value + '</span>' +
                       '</div>';
      });
    }
    
    specificFields.innerHTML = specificHtml;
  }

  // Update workflow diagram
  function updateWorkflowDiagram() {
    const container = document.getElementById('workflow-diagram');
    
    if (!templateConfig.steps || templateConfig.steps.length === 0) {
      container.innerHTML = '<p class="text-slate-500">No diagram available</p>';
      return;
    }
    
    let html = '<div class="flex items-center gap-4 min-w-max">';
    
    templateConfig.steps.forEach((step, index) => {
      const isLast = index === templateConfig.steps.length - 1;
      
      html += '<div class="flex flex-col items-center">';
      html += '<div class="w-16 h-16 rounded-xl bg-' + (step.type === 'ai' ? 'purple' : 'blue') + '-500/20 border-2 border-' + (step.type === 'ai' ? 'purple' : 'blue') + '-500/50 flex items-center justify-center">';
      html += '<span class="text-white font-bold">' + (index + 1) + '</span>';
      html += '</div>';
      html += '<span class="mt-2 text-white text-sm font-medium">' + step.name + '</span>';
      html += '<span class="text-xs text-slate-500 capitalize">' + step.type + '</span>';
      html += '</div>';
      
      if (!isLast) {
        html += '<div class="flex items-center">';
        html += '<svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">';
        html += '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>';
        html += '</svg>';
        html += '</div>';
      }
    });
    
    html += '</div>';
    container.innerHTML = html;
  }

  // Listen for schedule changes to update cost
  document.getElementById('workflow-schedule')?.addEventListener('change', updateCostEstimate);

  // Deploy workflow
  function deployWorkflow() {
    const name = document.getElementById('workflow-name').value;
    const description = document.getElementById('workflow-desc').value;
    
    if (!name) {
      Toast.error('Please enter a workflow name');
      return;
    }
    
    const deployBtn = document.getElementById('deploy-btn');
    deployBtn.innerHTML = '<span class="spinner mr-2"></span>Deploying...';
    deployBtn.disabled = true;
    
    // Gather template-specific config
    const configData = {};
    if (templateConfig.fields) {
      templateConfig.fields.forEach(field => {
        const el = document.getElementById('config-' + field.id);
        if (el) {
          if (field.type === 'checkbox') {
            configData[field.id] = el.checked;
          } else if (field.type === 'multiselect') {
            const checked = document.querySelectorAll('input[name="config-' + field.id + ']:checked');
            configData[field.id] = Array.from(checked).map(cb => cb.value);
          } else {
            configData[field.id] = el.value;
          }
        }
      });
    }
    
    fetch('/api/wizard/workflow/create', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        name: name,
        template: selectedTemplate,
        description: description,
        schedule: document.getElementById('workflow-schedule').value,
        batch_size: document.getElementById('batch-size').value,
        notify: document.getElementById('workflow-notify').checked,
        config: configData
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.status === 'created') {
        Toast.success(data.message);
        setTimeout(() => {
          window.location.href = '/workflows';
        }, 1500);
      } else {
        throw new Error(data.message || 'Failed to create workflow');
      }
    })
    .catch(error => {
      deployBtn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Deploy Workflow';
      deployBtn.disabled = false;
      Toast.error('Failed to deploy workflow: ' + error.message);
    });
  }

  // Check Local (Ollama) provider status
  function checkLocalProviderStatus() {
    fetch('/api/ai/providers/local')
      .then(r => r.json())
      .then(data => {
        const statusEl = document.getElementById('ai-provider-status');
        const dotEl = document.getElementById('local-status-dot');
        const textEl = document.getElementById('local-status-text');
        
        statusEl.classList.remove('hidden');
        
        if (data.config && data.config.enabled) {
          dotEl.classList.remove('bg-red-400');
          dotEl.classList.add('bg-emerald-400');
          textEl.textContent = 'Ollama: ' + (data.config.model || 'Configured');
        } else {
          dotEl.classList.remove('bg-emerald-400');
          dotEl.classList.add('bg-amber-400');
          textEl.textContent = 'Ollama: Not configured';
        }
      })
      .catch(() => {
        const statusEl = document.getElementById('ai-provider-status');
        const dotEl = document.getElementById('local-status-dot');
        const textEl = document.getElementById('local-status-text');
        statusEl.classList.remove('hidden');
        dotEl.classList.add('bg-red-400');
        textEl.textContent = 'Ollama: Connection failed';
      });
  }

  // Check status on page load
  document.addEventListener('DOMContentLoaded', checkLocalProviderStatus);
</script>
