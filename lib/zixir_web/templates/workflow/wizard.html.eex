<div class="max-w-6xl mx-auto">
  <!-- Breadcrumbs -->
  <nav class="flex items-center gap-2 text-sm text-slate-400 mb-6">
    <a href="/" class="hover:text-white transition-colors">Dashboard</a>
    <span>/</span>
    <a href="/workflows" class="hover:text-white transition-colors">Workflows</a>
    <span>/</span>
    <span class="text-white">New Workflow</span>
  </nav>

  <!-- Wizard Header -->
  <div class="mb-8 text-center">
    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-zixir-500 to-zixir-600 rounded-2xl mb-4 shadow-lg shadow-zixir-500/30">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
    </div>
    <h1 class="text-3xl font-bold text-white mb-2">Workflow Wizard</h1>
    <p class="text-slate-400">Create intelligent workflows with AI-powered automation</p>
    <div class="mt-3">
      <a href="/ai" class="text-sm text-purple-400 hover:text-purple-300 inline-flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Configure AI Providers
      </a>
    </div>
  </div>

  <!-- AI Provider Status -->
  <div id="ai-provider-status" class="mb-6 hidden">
    <div class="flex items-center gap-4 p-4 bg-slate-800/50 rounded-lg border border-slate-700">
      <div class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-emerald-400" id="local-status-dot"></span>
        <span class="text-sm text-slate-300" id="local-status-text">Checking Ollama status...</span>
      </div>
      <a href="/ai" class="text-sm text-purple-400 hover:text-purple-300 ml-auto">Configure →</a>
    </div>
  </div>

  <!-- Progress Steps -->
  <div class="mb-8">
    <div class="flex items-center justify-center gap-4">
      <div class="flex items-center gap-2 progress-step">
        <div class="w-8 h-8 rounded-full bg-zixir-600 text-white flex items-center justify-center font-semibold text-sm step-circle">1</div>
        <span class="text-white font-medium step-label">Choose Template</span>
      </div>
      <div class="w-12 h-0.5 bg-slate-700"></div>
      <div class="flex items-center gap-2 progress-step">
        <div class="w-8 h-8 rounded-full bg-slate-700 text-slate-400 flex items-center justify-center font-semibold text-sm step-circle">2</div>
        <span class="text-slate-400 step-label">Configure</span>
      </div>
      <div class="w-12 h-0.5 bg-slate-700"></div>
      <div class="flex items-center gap-2 progress-step">
        <div class="w-8 h-8 rounded-full bg-slate-700 text-slate-400 flex items-center justify-center font-semibold text-sm step-circle">3</div>
        <span class="text-slate-400 step-label">Review & Deploy</span>
      </div>
    </div>
  </div>

  <!-- Step 1: Choose Template - Enhanced with Categories -->
  <div id="workflow-step-1" class="wizard-step">
    <!-- Template Category Filters -->
    <div class="flex flex-wrap gap-2 mb-6 justify-center">
      <button onclick="filterTemplates('all')" class="template-filter px-4 py-2 bg-zixir-600 text-white rounded-full text-sm font-medium transition-colors" data-filter="all">
        All Templates
      </button>
      <button onclick="filterTemplates('erp')" class="template-filter px-4 py-2 bg-slate-800 text-slate-300 hover:text-white rounded-full text-sm font-medium transition-colors" data-filter="erp">
        ERP/Inventory
      </button>
      <button onclick="filterTemplates('ai')" class="template-filter px-4 py-2 bg-slate-800 text-slate-300 hover:text-white rounded-full text-sm font-medium transition-colors" data-filter="ai">
        AI-Powered
      </button>
      <button onclick="filterTemplates('data')" class="template-filter px-4 py-2 bg-slate-800 text-slate-300 hover:text-white rounded-full text-sm font-medium transition-colors" data-filter="data">
        Data Processing
      </button>
    </div>

    <!-- Template Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" id="template-grid">
      <!-- Invoice Processing - ERP -->
      <button onclick="selectWorkflowTemplate('invoice-processing')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-emerald-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="erp ai">
        <div class="w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-emerald-500/30 transition-colors">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Invoice Processing</h3>
        <p class="text-slate-400 text-sm mb-2">Extract vendor, amounts, and dates from invoices automatically</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-emerald-500/20 text-emerald-400 text-xs rounded">ERP</span>
          <span class="inline-block px-2 py-0.5 bg-purple-500/20 text-purple-400 text-xs rounded">AI</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>4 steps</span>
          <span>•</span>
          <span>Est. $0.02/run</span>
        </div>
      </button>

      <!-- Document Classification - AI -->
      <button onclick="selectWorkflowTemplate('document-classification')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-purple-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="ai">
        <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-purple-500/30 transition-colors">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Document Classification</h3>
        <p class="text-slate-400 text-sm mb-2">Auto-sort documents by type: invoices, receipts, contracts, etc.</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-purple-500/20 text-purple-400 text-xs rounded">AI</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>3 steps</span>
          <span>•</span>
          <span>Est. $0.01/run</span>
        </div>
      </button>

      <!-- Data Pipeline - Data -->
      <button onclick="selectWorkflowTemplate('data-pipeline')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-blue-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="data">
        <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-500/30 transition-colors">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Data Pipeline</h3>
        <p class="text-slate-400 text-sm mb-2">Extract, transform, and load data between databases</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-blue-500/20 text-blue-400 text-xs rounded">ETL</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>4 steps</span>
          <span>•</span>
          <span>No AI cost</span>
        </div>
      </button>

      <!-- Order Processing - ERP -->
      <button onclick="selectWorkflowTemplate('order-processing')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-emerald-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="erp">
        <div class="w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-emerald-500/30 transition-colors">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Order Processing</h3>
        <p class="text-slate-400 text-sm mb-2">Validate, process, and fulfill orders automatically</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-emerald-500/20 text-emerald-400 text-xs rounded">ERP</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>5 steps</span>
          <span>•</span>
          <span>No AI cost</span>
        </div>
      </button>

      <!-- AI Analysis - AI -->
      <button onclick="selectWorkflowTemplate('ai-analysis')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-purple-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="ai">
        <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-purple-500/30 transition-colors">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">AI Analysis</h3>
        <p class="text-slate-400 text-sm mb-2">Process text with LLM: classify, extract, summarize</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-purple-500/20 text-purple-400 text-xs rounded">AI</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>3 steps</span>
          <span>•</span>
          <span>Variable cost</span>
        </div>
      </button>

      <!-- Customer Support Triage - AI -->
      <button onclick="selectWorkflowTemplate('support-triage')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-purple-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="ai">
        <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-purple-500/30 transition-colors">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Support Triage</h3>
        <p class="text-slate-400 text-sm mb-2">Classify and route customer tickets automatically</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-purple-500/20 text-purple-400 text-xs rounded">AI</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>3 steps</span>
          <span>•</span>
          <span>Est. $0.01/run</span>
        </div>
      </button>

      <!-- Data Validation - Data AI -->
      <button onclick="selectWorkflowTemplate('data-validation')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-blue-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="data ai">
        <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-500/30 transition-colors">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Data Validation</h3>
        <p class="text-slate-400 text-sm mb-2">AI-powered data quality checks and cleansing</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-blue-500/20 text-blue-400 text-xs rounded">Data</span>
          <span class="inline-block px-2 py-0.5 bg-purple-500/20 text-purple-400 text-xs rounded">AI</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>4 steps</span>
          <span>•</span>
          <span>Est. $0.02/run</span>
        </div>
      </button>

      <!-- Custom Workflow -->
      <button onclick="selectWorkflowTemplate('custom')" 
              class="template-card group p-6 bg-slate-800 rounded-xl border border-slate-700 hover:border-zixir-500/50 hover:bg-slate-700/50 transition-all text-left"
              data-category="custom">
        <div class="w-12 h-12 bg-zixir-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-zixir-500/30 transition-colors">
          <svg class="w-6 h-6 text-zixir-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
          </svg>
        </div>
        <h3 class="text-white font-semibold mb-1">Custom Workflow</h3>
        <p class="text-slate-400 text-sm mb-2">Build your own workflow from scratch</p>
        <div class="flex gap-2">
          <span class="inline-block px-2 py-0.5 bg-zixir-500/20 text-zixir-400 text-xs rounded">Custom</span>
        </div>
        <div class="mt-3 flex items-center gap-2 text-xs text-slate-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>Flexible</span>
          <span>•</span>
          <span>Variable</span>
        </div>
      </button>
    </div>
    
    <div class="flex justify-end mt-6">
      <a href="/workflows" class="px-6 py-2 text-slate-400 hover:text-white transition-colors">
        Cancel
      </a>
    </div>
  </div>

  <!-- Step 2: Configure - Template-Specific Fields -->
  <div id="workflow-step-2" class="wizard-step hidden">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Configuration -->
      <div class="lg:col-span-2">
        <h2 class="text-xl font-semibold text-white mb-6">Configure your workflow</h2>
        
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <!-- Basic Info -->
          <div class="space-y-4 mb-6">
            <div>
              <label class="block text-sm text-slate-400 mb-2">Workflow Name <span class="text-red-400">*</span></label>
              <input type="text" id="workflow-name" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-zixir-500" placeholder="e.g., Daily Invoice Processing">
            </div>
            
            <div>
              <label class="block text-sm text-slate-400 mb-2">Description</label>
              <textarea id="workflow-desc" rows="2" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-zixir-500" placeholder="What does this workflow do?"></textarea>
            </div>
          </div>

          <!-- Template-Specific Configuration -->
          <div id="template-specific-config" class="border-t border-slate-700 pt-6 mb-6">
            <!-- Injected dynamically based on template -->
          </div>

          <!-- Common Configuration -->
          <div class="border-t border-slate-700 pt-6 space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm text-slate-400 mb-2">Schedule</label>
                <select id="workflow-schedule" class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-zixir-500">
                  <option value="manual">Manual (Run on demand)</option>
                  <option value="hourly">Every hour</option>
                  <option value="daily">Daily at midnight</option>
                  <option value="weekly">Weekly on Monday</option>
                  <option value="custom">Custom (Cron)</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm text-slate-400 mb-2">Batch Size</label>
                <input type="number" id="batch-size" value="100" min="1" max="1000"
                       class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-zixir-500">
                <p class="text-xs text-slate-500 mt-1">Records processed per run</p>
              </div>
            </div>
            
            <div class="flex items-center gap-2 p-4 bg-slate-900 rounded-lg border border-slate-700">
              <input type="checkbox" id="workflow-notify" class="w-4 h-4 rounded bg-slate-700 border-slate-600 text-zixir-600 focus:ring-zixir-500">
              <label for="workflow-notify" class="text-sm text-slate-300">Send notifications on errors or completion</label>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar: Visual Step Preview & Cost -->
      <div class="lg:col-span-1">
        <!-- Step Preview -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700 mb-6">
          <h3 class="text-sm font-semibold text-white mb-4 flex items-center gap-2">
            <svg class="w-4 h-4 text-zixir-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
            Workflow Steps
          </h3>
          <div id="step-preview" class="space-y-3">
            <!-- Injected dynamically -->
          </div>
        </div>

        <!-- Cost Estimate -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <h3 class="text-sm font-semibold text-white mb-4 flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Cost Estimate
          </h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center text-sm">
