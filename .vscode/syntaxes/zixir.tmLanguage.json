{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Zixir",
  "scopeName": "source.zixir",
  "patterns": [
    { "include": "#comment" },
    { "include": "#keyword" },
    { "include": "#engine_call" },
    { "include": "#python_call" },
    { "include": "#string" },
    { "include": "#number" },
    { "include": "#identifier" }
  ],
  "repository": {
    "comment": {
      "match": "#.*$",
      "name": "comment.line.number-sign.zixir"
    },
    "keyword": {
      "match": "\\blet\\b",
      "name": "keyword.control.zixir"
    },
    "engine_call": {
      "match": "\\bengine\\s*\\.\\s*[a-zA-Z_][a-zA-Z0-9_]*",
      "name": "support.function.engine.zixir"
    },
    "python_call": {
      "match": "\\bpython\\b",
      "name": "support.function.python.zixir"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.zixir",
      "patterns": [{ "match": "\\\\\"", "name": "constant.character.escape.zixir" }]
    },
    "number": {
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b",
      "name": "constant.numeric.zixir"
    },
    "identifier": {
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.zixir"
    }
  }
}
